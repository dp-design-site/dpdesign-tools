function newchange (title,diva){
//    var x = document.querySelectorAll(".frame-type-form_formframework form"); 
//    var zaj = x[0].id; 
    var zajavka = zaj+"-hidden-1";
    if (!favourites.includes(title))
    {
    favourites.push(title);
    document.getElementById(zajavka).value = favourites;
    var x = document.getElementById(diva);
    x.parentElement.parentElement.style.backgroundColor = "#B6322A";
 	x.parentElement.parentElement.style.borderColor = "#B6322A";
    x.nextElementSibling.innerHTML = "<span style='color:#fff;'>ПРЕМАХНИ КАТО ИЗБРАНА</span>";
	}
    else {    
    var index = favourites.indexOf(title);
	if (index >= 0) {
 	favourites.splice( index, 1 );
    document.getElementById(zajavka).value = favourites;
	}
    var y = document.getElementById(diva);
    y.parentElement.parentElement.style.backgroundColor = "#fff";
    y.parentElement.parentElement.style.borderColor = "#fff";
    y.nextElementSibling.innerHTML = "<span style='color:#000;'>маркирай като желана</span>";   
	}     
}