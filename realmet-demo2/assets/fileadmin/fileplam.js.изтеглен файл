
let opt = document.querySelectorAll(".pl");
if (opt.length > 1)
{opt[1].style.display = "none";}

var favourites = [];

let x = document.querySelectorAll(".frame-type-form_formframework form"); 
let zaj = x[0].id; 
country = zaj+"-singleselect-1";
let phone = zaj+"-text-4";
let activities = document.getElementById(country);
activities.addEventListener("change", function() {
    document.getElementById(phone).value = this.value;
});

