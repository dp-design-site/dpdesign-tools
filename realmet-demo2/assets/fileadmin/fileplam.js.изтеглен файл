function opcii (){
  var element = document.getElementById("optbut");
  console.log(element);
 if (opt[1].style.display != "flex") {
    opt[1].style.display = "flex";
    element.classList.add("myopenstyle");
 } else {
    opt[1].style.display = "none";
    element.classList.remove("myopenstyle");
 }
}

